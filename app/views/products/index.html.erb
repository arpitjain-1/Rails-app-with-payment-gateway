<p style="color: green"><%= notice %></p>
<h1>Products</h1>
<table border="2" style="border-collapse: collapse;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Pay</th>
      <th>Count</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= button_to "Pay", checkout_create_path(id: product.id), method: :post, remote: true, form: { data: { turbo: false } } %></td>
        <td><%= product.sales_count%>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: "Are you sure you want to delete this product?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Link to Create New Product -->
<%= link_to "New product", new_product_path, class: "new-product-link" %>
